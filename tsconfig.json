{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "target": "ES6",
    "noEmitOnError": true,
    "strict": true,
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "esModuleInterop":true,
    "skipLibCheck":true,
    "forceConsistentCasingInFileNames":true,
  },
  "include": ["./server/**/*.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": true
}
